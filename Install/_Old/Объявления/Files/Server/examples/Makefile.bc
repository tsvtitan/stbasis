	@echo /x /Tpd >> link.arg 
	@echo $(LIBS)+ >> link.arg
	@echo $(BCDIR)\lib\import32.lib+ >> link.arg
	@echo $(BCDIR)\lib\cw32mt.lib >> link.arg
	$(LINK) @link.arg
	@echo -----------------------------------------------------------
	@echo You need to copy api9f.dll to the interbase lib directory
	@echo in order for api9.exe to work correctly.
	@echo -----------------------------------------------------------

